          h1 Profile
          button.btn.btn-warning.logout Log Out
          button(type="button" data-toggle="modal" data-target="#myModal").btn.btn-success.editProfile Edit Profile
      .row.userInfo#sampleProfile
        .col-xs-4.col-xs-offset-4  
          .media
            .media-left
              a(href='#')
                img.media-object.avatar(src='#{avatar}', alt='')
            .media-body
              h3.media-heading.username #{username}
              h4.name #{name}
              h4.email #{email}
              h4.birthday #{birthday}
              h5.aboutMe #{aboutMe}
        .col-xs-4.editInfoCol
          label(for="editName") Edit Name:
          input(type="text").editName
          label(for="editEmail") Edit Email:
          input(type="email").editEmail
          label(for="editAvatar") Avatar URL:
          input(type="text").editAvatar
          label(for="editBirthday") Edit Birthday:
          input(type="text").editBirthday
          label(for="editAboutMe") Edit About Me:
          textarea(name="aboutMe", cols="20", rows="5")
          button.btn.btn-success.saveEdits Save Edits
      
